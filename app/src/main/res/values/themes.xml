<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sportti" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_wine_color</item>
        <item name="colorPrimaryVariant">@color/user_text_color</item>
        <item name="colorOnPrimary">@color/user_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_taupe</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/user_text_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/teal_200</item>
    </style>

    <style name="HiddenTitleTheme.Sportti" parent="Theme.Sportti">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>