<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ExerciseDetailsActivity">

    <TextView
        android:id="@+id/exercisedetails_textview_sport_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/exercisedetails_sport_default_value"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exercisedetails_textview_start_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/exercisedetails_textview_start_date"
        app:layout_constraintStart_toEndOf="@+id/exercisedetails_textview_start_date" />

    <TextView
        android:id="@+id/exercisedetails_textview_duration_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/exercisedetails_textview_duration"
        app:layout_constraintStart_toEndOf="@+id/exercisedetails_textview_duration" />

    <TextView
        android:id="@+id/exercisedetails_textview_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/exercisedetails_start_date"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercisedetails_textview_sport_name" />

    <TextView
        android:id="@+id/exercisedetails_textview_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/exercisedetails_duration"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercisedetails_textview_start_date" />

    <TextView
        android:id="@+id/exercisedetails_textview_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/exercisedetails_calories"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercisedetails_textview_duration" />

    <TextView
        android:id="@+id/exercisedetails_textview_length_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/exercisedetails_textview_length"
        app:layout_constraintStart_toEndOf="@+id/exercisedetails_textview_length" />

    <TextView
        android:id="@+id/exercisedetails_textview_pulse_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/exercisedetails_textview_pulse"
        app:layout_constraintStart_toEndOf="@+id/exercisedetails_textview_pulse" />

    <TextView
        android:id="@+id/exercisedetails_textview_calories_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/exercisedetails_textview_calories"
        app:layout_constraintStart_toEndOf="@+id/exercisedetails_textview_calories" />

    <TextView
        android:id="@+id/exercisedetails_textview_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/exercisedetails_length"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercisedetails_textview_pulse" />

    <TextView
        android:id="@+id/exercisedetails_textview_pulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/exercisedetails_pulse"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercisedetails_textview_calories" />

    <com.mapquest.mapping.maps.MapView
        android:id="@+id/exercisedetails_mapView_map_for_route"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercisedetails_textview_length"
        app:mapquest_app_key="urnwLsvuxm8IpPSp7zVGCVL9teuV8tJV" />

</androidx.constraintlayout.widget.ConstraintLayout>