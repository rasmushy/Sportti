<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
    android:id="@+id/seekBarHourPopUp"
    style="@style/Widget.AppCompat.SeekBar.Discrete"
    android:layout_width="300dp"
    android:layout_height="75dp"
    android:max="10"
    android:progress="3"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/textViewHoursPopUp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/user_set_kg"
    app:layout_constraintBottom_toTopOf="@+id/seekBarHourPopUp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0" />

<TextView
    android:id="@+id/textViewTimePopUp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:text="@string/user_set_weight"
    app:layout_constraintBottom_toTopOf="@+id/textViewHoursPopUp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonSaveDurationPopUp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/button_text_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarHourPopUp" />
</androidx.constraintlayout.widget.ConstraintLayout>